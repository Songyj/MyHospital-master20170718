<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/green"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="个人主页"
            android:textSize="22dp"
            android:textColor="@color/lightgreen"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.example.songyanjun.myhospital.Style.CircleImageView
            android:id="@+id/circleview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.example.songyanjun.myhospital.Style.BorderTextView
                android:id="@+id/doc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="3dp"
                android:textSize="15dp"
                android:textColor="@color/green"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.songyanjun.myhospital.Style.BorderTextView1
                    android:id="@+id/doc_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingRight="16dp"
                    android:textSize="12dp"
                    android:textColor="@color/darkgray"
                    />

                <com.example.songyanjun.myhospital.Style.BorderTextView1
                    android:id="@+id/doc_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textSize="12dp"
                    android:textColor="@color/darkgray"
                    />

                <TextView
                    android:id="@+id/doc_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="16dp"
                    android:textSize="12dp"
                    android:textColor="@color/darkgray"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/flag"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="4dp"
                android:scaleType="centerInside"
                />
                <TextView
                    android:id="@+id/flag_num"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textColor="@color/green"
                    android:layout_marginRight="16dp"
                    android:textSize="12dp"/>
                <ImageView
                    android:id="@+id/lett"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/lett_num"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textColor="@color/green"
                    android:textSize="12dp"
                    android:layout_marginRight="16dp"
                    />
                <ImageView
                    android:id="@+id/bag"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/bag_num"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textColor="@color/green"
                    android:layout_marginRight="16dp"
                    android:textSize="12dp"/>
                <ImageView
                    android:id="@+id/count"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textColor="@color/green"
                    android:textSize="12dp"/>
        </LinearLayout>




        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/titlegray"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_award"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:overScrollMode="never"
        />

</LinearLayout>