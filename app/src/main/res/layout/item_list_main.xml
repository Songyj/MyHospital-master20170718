<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/item_main"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
>

            <TextView
                android:id="@+id/award_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/green"
                android:text="表彰类型"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/darkgray"
                    android:text="接收人"
                    android:layout_marginRight="8dp"
                    />
                <TextView
                    android:id="@+id/award_man1_apart1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/text_person1"
                    android:layout_alignBottom="@+id/text_person1"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/darkgray"
                    android:text="部门"
                    android:textSize="10sp"
                    android:layout_marginRight="4dp"/>

                <TextView
                    android:id="@+id/text_person1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/award_type1"
                    android:text="人员"
                    android:textColor="@color/darkgray"
                    android:textSize="10sp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">

                <TextView
                android:id="@+id/award_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请时间"
                android:padding="0dp"
                    android:textSize="8dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/lightgray"
                android:layout_alignTop="@+id/text_person1"
                android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/text_person3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:textColor="@color/lightgray"
                    android:text="填表人"
                    android:layout_below="@+id/text_person1"

                    android:layout_alignParentStart="true"/></LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/apply_img1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1.85"
            android:paddingTop="0dp"
            android:scaleType="centerCrop"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
