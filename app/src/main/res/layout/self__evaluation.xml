<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/eva_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/green"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        toolbar:navigationIcon="@drawable/back">
        <TextView
            android:id="@+id/Apply_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textColor="@color/lightgreen"
            android:text="医德评价"
            />
    </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.example.songyanjun.myhospital.Style.CircleImageView
            android:id="@+id/circleview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.example.songyanjun.myhospital.Style.BorderTextView
                android:id="@+id/doc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="3dp"
                android:textSize="15dp"
                android:textColor="@color/green"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.songyanjun.myhospital.Style.BorderTextView1
                    android:id="@+id/doc_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingRight="16dp"
                    android:textSize="12dp"
                    android:textColor="@color/darkgray"
                    />

                <com.example.songyanjun.myhospital.Style.BorderTextView1
                    android:id="@+id/doc_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textSize="12dp"
                    android:textColor="@color/darkgray"
                    />

                <TextView
                    android:id="@+id/doc_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="16dp"
                    android:textSize="12dp"
                    android:textColor="@color/darkgray"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/flag"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/flag_num"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textColor="@color/green"
                    android:layout_marginRight="16dp"
                    android:textSize="12dp"/>
                <ImageView
                    android:id="@+id/lett"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/lett_num"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textColor="@color/green"
                    android:textSize="12dp"
                    android:layout_marginRight="16dp"
                    />
                <ImageView
                    android:id="@+id/bag"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/bag_num"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textColor="@color/green"
                    android:layout_marginRight="16dp"
                    android:textSize="12dp"/>
                <ImageView
                    android:id="@+id/count"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textColor="@color/green"
                    android:textSize="12dp"/>
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-12dp"
        android:background="@color/titlegray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/ly_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/eva_commit"
                android:text="@string/commit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/botton_shape"
                android:textSize="14sp"
                android:textColor="@color/lightgreen"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
        android:id="@+id/eva_recycler_view"
        android:layout_above="@id/ly_bottom"
            android:layout_marginBottom="10dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:overScrollMode="never"
            >
    </android.support.v7.widget.RecyclerView>

    </RelativeLayout>


    </LinearLayout>

