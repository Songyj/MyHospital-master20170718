<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    android:gravity="center"
    tools:context=".Login.Login">

    <android.support.v7.widget.Toolbar
        android:id="@+id/apartment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/green"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        toolbar:navigationIcon="@drawable/back">

        <TextView
            android:id="@+id/apar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="科室主页"
            android:textSize="22dp"
            android:textColor="@color/lightgreen"
            />
    </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <com.example.songyanjun.myhospital.Style.BorderTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp"
                android:textColor="@color/green"
                android:text="评价指标"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <ImageView
                    android:id="@+id/flag"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/flag_num"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textColor="@color/green"
                    android:layout_marginRight="16dp"
                    android:textSize="12dp"/>
                <ImageView
                    android:id="@+id/lett"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/lett_num"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textColor="@color/green"
                    android:textSize="12dp"
                    android:layout_marginRight="16dp"
                    />
                <ImageView
                    android:id="@+id/bag"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/bag_num"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textColor="@color/green"
                    android:layout_marginRight="16dp"
                    android:textSize="12dp"/>
                <ImageView
                    android:id="@+id/count"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textColor="@color/green"
                    android:textSize="12dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/white"/>
            </LinearLayout>

    <android.support.design.widget.TabLayout

        android:id="@+id/type_tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        style="@style/MyTypeTabLayout"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/titlegray"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</LinearLayout>