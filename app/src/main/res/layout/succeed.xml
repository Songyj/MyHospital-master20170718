<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/succeed_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/green"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        toolbar:navigationIcon="@drawable/back">
        <TextView
            android:id="@+id/Apply_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textColor="@color/lightgreen"
            android:text="提交成功"
            />
    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/pic_suc"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:adjustViewBounds="true"
        android:src="@drawable/succeed"
        android:scaleType="centerInside"
        android:layout_marginTop="96dp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/text_mes"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="您的申请提交成功"
        android:textColor="@color/darkgray"
        android:textSize="12sp"/>
    <Button
        android:id="@+id/Btn_resub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-4dp"
        android:gravity="center"
        android:text="继续提交"
        android:textSize="14sp"
        android:textColor="@color/green"
        style="?android:attr/borderlessButtonStyle"/>







</LinearLayout>